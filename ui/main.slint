import { HorizontalBox, StyleMetrics, LineEdit, Button } from "std-widgets.slint";

export global Function {
    pure callback link-clicked(string);
    callback init-file() -> string;
    callback reload-file(string, string) -> string;
    callback file-dialog(string) -> string;
}

component Hyperlink inherits Text {
    in property <string> url;

    area := TouchArea {
        clicked => {
            Function.link-clicked(root.url)
        }
    }
}

export component SteamOptionX inherits Window {
    in-out property <string> file-path;
    init => {
        debug("This ran");
        root.file-path = Function.init-file();
        debug(root.file-path);
    }

    title: @tr("SteamOptionX");

    HorizontalBox {
        VerticalLayout {
            spacing: StyleMetrics.layout-spacing;

            VerticalLayout {
                Text {
                    text: @tr("Open 'Steam/userdata/XXXXXXXX/config/localconfig.vdf':");
                }

                GridLayout {
                    HorizontalLayout {
                        spacing: StyleMetrics.layout-spacing;

                        LineEdit {
                            text: root.file-path;

                            accepted(path) => {
                                root.file-path = Function.reload-file(path, root.file-path);
                            }
                        }

                        Button {
                            text: "Open file...";

                            clicked => {
                                root.file-path = Function.file-dialog(root.file-path)
                            }
                        }
                    }
                }

                Text {
                    text: root.file-path;
                }
            }

            VerticalLayout {
                Text {
                    text: @tr("Filter by game:");
                }

                filter-edit := LineEdit {
                    placeholder-text: @tr("Enter game...");
                }

                Hyperlink {
                    text: @tr("Game");
                    url: @tr("https://example.com");
                }
            }
        }
    }
}
